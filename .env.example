# Discord Bot Token
DISCORD_TOKEN=your_bot_token_here

# Discord OAuth2 Credentials (for web dashboard)
DISCORD_CLIENT_ID=your_client_id_here
DISCORD_CLIENT_SECRET=your_client_secret_here

# Server Configuration
PORT=3000
CALLBACK_URL=http://localhost:3000/auth/discord/callback

# Session Secret (change this to a random string)
SESSION_SECRET=your-random-secret-key-here

# Healthcheck URL (optional - keeps bot alive on services like UptimeRobot, Healthchecks.io)
# Example: https://hc-ping.com/your-unique-id
HEALTHCHECK_URL=

# Admin User IDs (comma-separated Discord user IDs for admin commands)
ADMIN_IDS=

# For production deployment, update CALLBACK_URL to your deployed URL:
# CALLBACK_URL=https://your-app.onrender.com/auth/discord/callback
